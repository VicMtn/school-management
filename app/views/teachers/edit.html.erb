<% content_for :title, "Edit Teacher" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render "shared/admin_tabs" %>
  
  <div class="mb-8 border-b border-gray-200 pb-5">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Edit Teacher</h1>
        <p class="mt-1 text-sm text-gray-500">Update teacher information and assignments.</p>
      </div>
      <div class="flex items-center space-x-3">
        <%= link_to teacher_path(@teacher), class: "flex items-center text-sm text-gray-600 hover:text-gray-900", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Details
        <% end %>
      </div>
    </div>
  </div>

  <%= form_with(model: @teacher, class: "space-y-8", data: { turbo: false }) do |f| %>
    <% if @teacher.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-md">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @teacher.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white overflow-hidden shadow-sm rounded-xl">
      <div class="px-6 py-5 border-b border-gray-100">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-blue-50 rounded-lg p-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
            <p class="text-sm text-gray-500">Teacher's personal details and contact information.</p>
          </div>
        </div>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-y-6 gap-x-6 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= f.label :firstname, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <%= f.text_field :firstname, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "First name" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= f.label :lastname, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <%= f.text_field :lastname, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "Last name" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <%= f.email_field :email, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "teacher@example.com" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <%= f.text_field :phone_number, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "+33 01 23 45 67 89" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :iban, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
              </div>
              <%= f.text_field :iban, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "FR76 1234 5678 9012 3456 7890 123" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow-sm rounded-xl">
      <div class="px-6 py-5 border-b border-gray-100">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-indigo-50 rounded-lg p-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Subjects</h3>
            <p class="text-sm text-gray-500">Select subjects taught by this teacher.</p>
          </div>
        </div>
      </div>
      <div class="px-6 py-6">
        <fieldset>
          <legend class="sr-only">Subjects</legend>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @subjects.each do |subject| %>
              <div class="relative flex items-center">
                <%= f.check_box :subject_ids, 
                            { multiple: true, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" }, 
                            subject.id, 
                            @teacher.subjects.include?(subject) %>
                <%= f.label "subject_ids_#{subject.id}", class: "ml-3 font-medium text-sm text-gray-700" do %>
                  <span class="flex items-center">
                    <span class="w-2 h-2 inline-block mr-2 rounded-full" style="background-color: purple-600"></span>
                    <%= subject.name %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </fieldset>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow-sm rounded-xl">
      <div class="px-6 py-5 border-b border-gray-100">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-indigo-50 rounded-lg p-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Classes</h3>
            <p class="text-sm text-gray-500">Assign classes to this teacher.</p>
          </div>
        </div>
      </div>
      <div class="px-6 py-6">
        <fieldset>
          <legend class="sr-only">Classes</legend>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @school_classes.each do |school_class| %>
              <div class="relative flex items-start p-4 border border-gray-200 rounded-lg hover:border-gray-300">
                <div class="flex items-center h-5">
                  <%= f.check_box :school_class_ids, 
                              { multiple: true, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" }, 
                              school_class.id, 
                              @teacher.school_classes.include?(school_class) %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label "school_class_ids_#{school_class.id}", class: "font-medium text-gray-700" do %>
                    <%= school_class.name %>
                    <p class="text-gray-500 mt-1">
                      <% if school_class.moment %>
                        Academic Year: <%= school_class.moment.start_on&.year %>, 
                        Semester: <%= school_class.moment.uid %>
                      <% else %>
                        No schedule information
                      <% end %>
                    </p>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </fieldset>
      </div>
    </div>

    <div class="flex justify-end gap-4">
      <%= link_to "Cancel", teacher_path(@teacher), data: { turbo: false }, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150" %>
      <%= f.button type: "submit", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        Update Teacher
      <% end %>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    class SelectionController {
      static targets = ['tags']
      
      connect() {
        const select = this.element
        this.selectElement = select
        
        // Initialize select2 on the element
        if (typeof jQuery !== 'undefined' && jQuery.fn.select2) {
          jQuery(select).select2({
            placeholder: select.getAttribute('placeholder') || 'Select options',
            allowClear: true,
            width: '100%'
          })
          
          // Listen for changes
          jQuery(select).on('change', this.updateTags.bind(this))
          
          // Initial update
          this.updateTags()
        } else {
          console.warn('Select2 is not available')
          select.addEventListener('change', this.updateTags.bind(this))
          this.updateTags()
        }
      }
      
      updateTags() {
        const select = this.selectElement
        const tagsContainer = this.tagsTarget
        tagsContainer.innerHTML = ''
        
        const selectedOptions = Array.from(select.selectedOptions)
        
        selectedOptions.forEach(option => {
          const tag = document.createElement('span')
          tag.className = 'inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10'
          
          const name = option.text
          const id = option.value
          
          const displayText = document.createTextNode(name)
          tag.appendChild(displayText)
          
          const removeButton = document.createElement('button')
          removeButton.type = 'button'
          removeButton.className = 'ml-1.5 inline-flex h-4 w-4 flex-shrink-0 items-center justify-center rounded-full text-blue-400 hover:bg-blue-200 hover:text-blue-500 focus:bg-blue-400 focus:text-white focus:outline-none'
          removeButton.textContent = '×'
          removeButton.onclick = () => this.removeOption(id)
          
          tag.appendChild(removeButton)
          tagsContainer.appendChild(tag)
        })
      }
      
      removeOption(id) {
        const select = this.selectElement
        const option = select.querySelector(`option[value="${id}"]`)
        
        if (option) {
          option.selected = false
          
          // Trigger change event for select2
          if (typeof jQuery !== 'undefined' && jQuery.fn.select2) {
            jQuery(select).trigger('change')
          } else {
            const event = new Event('change', { bubbles: true })
            select.dispatchEvent(event)
          }
        }
      }
    }
    
    // Register controllers
    if (typeof Stimulus !== 'undefined') {
      const application = Stimulus.application || new Stimulus.Application()
      application.register('subject-selection', SelectionController)
      application.register('class-selection', SelectionController)
    } else {
      // Fallback for direct initialization
      document.querySelectorAll('[data-controller="subject-selection"]').forEach(element => {
        const controller = new SelectionController()
        controller.element = element
        controller.tagsTarget = document.querySelector('[data-subject-selection-target="tags"]')
        controller.connect()
      })
      
      document.querySelectorAll('[data-controller="class-selection"]').forEach(element => {
        const controller = new SelectionController()
        controller.element = element
        controller.tagsTarget = document.querySelector('[data-class-selection-target="tags"]')
        controller.connect()
      })
    }
  })
</script> 