<% content_for :title, "Teacher Details" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 border-b border-gray-200 pb-5">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Teacher Details</h1>
        <p class="mt-1 text-sm text-gray-500">Detailed information about <%= @teacher.full_name %>.</p>
      </div>
      <div class="flex items-center space-x-3">
        <%= link_to teachers_path, class: "flex items-center text-sm text-gray-600 hover:text-gray-900", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Teachers
        <% end %>
        <% if current_user.person&.type == 'Dean' %>
          <%= link_to edit_teacher_path(@teacher), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
            Edit Teacher
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow-sm rounded-xl mb-8">
    <div class="px-6 py-5 border-b border-gray-100">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-blue-50 rounded-lg p-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
          <p class="text-sm text-gray-500">Teacher's personal details and contact information.</p>
        </div>
      </div>
    </div>
    <div class="px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <div>
            <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Full Name</h4>
            <p class="mt-1 text-sm text-gray-900">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-full flex items-center justify-center">
                  <span class="text-blue-700 font-medium"><%= @teacher.full_name.first %></span>
                </div>
                <span class="ml-3 font-medium"><%= @teacher.full_name %></span>
              </div>
            </p>
          </div>
          <div>
            <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Email</h4>
            <p class="mt-1 text-sm text-gray-900 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <%= @teacher.email %>
            </p>
          </div>
        </div>
        <div class="space-y-4">
          <div>
            <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider">Phone Number</h4>
            <p class="mt-1 text-sm text-gray-900 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <%= @teacher.phone_number || "Not provided" %>
            </p>
          </div>
          <% if current_user.person&.type == 'Dean' %>
            <div>
              <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider">IBAN</h4>
              <p class="mt-1 text-sm text-gray-900 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
              </svg>
              <%= @teacher.iban || "Not provided" %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow-sm rounded-xl mb-8">
    <div class="px-6 py-5 border-b border-gray-100">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-indigo-50 rounded-lg p-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-gray-900">Subjects Taught</h3>
          <p class="text-sm text-gray-500">Subjects currently taught by this teacher.</p>
        </div>
      </div>
    </div>
    <div class="px-6 py-6">
      <% if @teacher.subjects.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 rounded-lg border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @teacher.subjects.each do |subject| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8 bg-indigo-100 rounded-full flex items-center justify-center">
                        <span class="text-indigo-700 font-medium"><%= subject.name.first %></span>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900"><%= subject.name %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800">
                      <%= subject.slug %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-500"><%= subject.respond_to?(:department) ? subject.department : "N/A" %></div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <p class="text-sm text-gray-500">No subjects currently assigned to this teacher.</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow-sm rounded-xl">
    <div class="px-6 py-5 border-b border-gray-100">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-green-50 rounded-lg p-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-gray-900">Assigned Classes</h3>
          <p class="text-sm text-gray-500">Classes currently assigned to this teacher.</p>
        </div>
      </div>
    </div>
    <div class="px-6 py-6">
      <% if @teacher.school_classes.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 rounded-lg border border-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Class Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Academic Year</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Semester</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @teacher.school_classes.each do |school_class| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8 bg-green-100 rounded-full flex items-center justify-center">
                        <span class="text-green-700 font-medium"><%= school_class.name.first %></span>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900"><%= school_class.name %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if school_class.moment&.start_on %>
                      <div class="text-sm text-gray-500"><%= school_class.moment.start_on.year %></div>
                    <% else %>
                      <div class="text-sm text-gray-500">Not set</div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if school_class.moment&.uid %>
                      <div class="text-sm text-gray-500"><%= school_class.moment.uid %></div>
                    <% else %>
                      <div class="text-sm text-gray-500">Not set</div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if school_class.master && school_class.master.id == @teacher.id %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        Class Master
                      </span>
                    <% else %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                        Teacher
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="bg-gray-50 rounded-lg p-6 text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <p class="text-sm text-gray-500">No classes currently assigned to this teacher.</p>
        </div>
      <% end %>
    </div>
  </div>
</div> 