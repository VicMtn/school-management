<% content_for :title, "Edit Promotion Rule" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render "shared/admin_tabs" %>

  <div class="mb-8 border-b border-gray-200 pb-5">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Edit Promotion Rule</h1>
        <p class="mt-1 text-sm text-gray-500">Update the promotion rule information</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to promotion_assert_path(@promotion_assert), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150 mr-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          View Rule
        <% end %>
        <%= link_to promotion_asserts_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Promotion Rules
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow-sm rounded-xl">
    <div class="px-6 py-5 border-b border-gray-100">
      <div class="flex items-center">
        <div class="flex-shrink-0 bg-indigo-50 rounded-lg p-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-gray-900">Rule Information</h3>
          <p class="text-sm text-gray-500">Update the details for this promotion rule</p>
        </div>
      </div>
    </div>
    
    <div class="px-6 py-6">
      <%= form_with(model: @promotion_assert) do |form| %>
        <% if @promotion_assert.errors.any? %>
          <div class="bg-red-50 text-red-500 px-6 py-4 font-medium rounded-md mb-6">
            <h2 class="font-bold text-lg"><%= pluralize(@promotion_assert.errors.count, "error") %> prohibited this promotion rule from being saved:</h2>
            <ul class="list-disc ml-6 mt-2">
              <% @promotion_assert.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-6">
            <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :description, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= form.label :function, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.select :function, 
                options_for_select([
                  ["Average", "average"],
                  ["Minimum", "minimum"],
                  ["Maximum", "maximum"]
                ], @promotion_assert.function),
                { prompt: "Select a function" },
                class: "mt-1 block w-full rounded-md border border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= form.label :moment_id, "Academic Period", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.collection_select :moment_id, @moments, :id, :uid, 
                { prompt: "Select a semester" },
                class: "mt-1 block w-full rounded-md border border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= form.label :sector_id, "Sector", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.collection_select :sector_id, @sectors, :id, :name,
                { prompt: "Select a sector" },
                class: "mt-1 block w-full rounded-md border border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" %>
            </div>
          </div>
        </div>

        <div class="mt-6 flex justify-end">
          <%= link_to "Cancel", promotion_assert_path(@promotion_assert), class: "ml-3 inline-flex justify-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Update Promotion Rule", class: "ml-3 inline-flex justify-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
