<%= form_with(model: subject, class: "contents") do |form| %>
  <% if subject.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

      <ul class="list-disc ml-6">
        <% subject.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :slug %>
    <%= form.text_field :slug, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": subject.errors[:slug].none?, "border-red-400 focus:outline-red-600": subject.errors[:slug].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": subject.errors[:name].none?, "border-red-400 focus:outline-red-600": subject.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :teacher_id %>
    <%= form.collection_select :teacher_id, @teachers, :id, :full_name, { prompt: "Select a teacher" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": subject.errors[:teacher_id].none?, "border-red-400 focus:outline-red-600": subject.errors[:teacher_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :sector_id, "Sector" %>
    <%= form.collection_select :sector_id, @sectors, :id, :name, { prompt: "Select a sector (optional)" }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": subject.errors[:sector_id].none?, "border-red-400 focus:outline-red-600": subject.errors[:sector_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-500 hover:bg-blue-400 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
