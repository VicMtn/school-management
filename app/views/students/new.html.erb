<% content_for :title, "New Student" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 border-b border-gray-200 pb-5">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">New Student</h1>
        <p class="mt-1 text-sm text-gray-500">Add a new student to the school.</p>
      </div>
      <div class="flex items-center space-x-3">
        <%= link_to students_path, class: "flex items-center text-sm text-gray-600 hover:text-gray-900", data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Students List
        <% end %>
      </div>
    </div>
  </div>

  <%= form_with(model: @student, class: "space-y-8", data: { turbo: false }) do |f| %>
    <% if @student.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-md">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @student.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white overflow-hidden shadow-sm rounded-xl">
      <div class="px-6 py-5 border-b border-gray-100">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-blue-50 rounded-lg p-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Personal Information</h3>
            <p class="text-sm text-gray-500">Student's personal details and contact information.</p>
          </div>
        </div>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-y-6 gap-x-6 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= f.label :firstname, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <%= f.text_field :firstname, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "First name" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= f.label :lastname, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <%= f.text_field :lastname, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "Last name" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <%= f.email_field :email, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "student@example.com" %>
            </div>
          </div>

          <div class="sm:col-span-3">
            <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <%= f.text_field :phone_number, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "+33 01 23 45 67 89" %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= f.label :iban, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
              </div>
              <%= f.text_field :iban, class: "block w-full pl-10 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm py-2.5 px-3", placeholder: "FR76 1234 5678 9012 3456 7890 123" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow-sm rounded-xl">
      <div class="px-6 py-5 border-b border-gray-100">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-indigo-50 rounded-lg p-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Class Assignment</h3>
            <p class="text-sm text-gray-500">Select the class for this student.</p>
          </div>
        </div>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= f.label :school_class_id, "Class", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <% options_for_select = @school_classes.map { |sc| 
                [
                  "#{sc.name} (#{sc.moment&.start_on&.year}, #{sc.moment&.uid})", 
                  sc.id, 
                  { 
                    'data-teacher' => sc.master&.full_name || "No teacher assigned",
                    'data-year' => sc.moment&.start_on&.year,
                    'data-semester' => sc.moment&.uid
                  }
                ] 
              } %>
              <%= f.select :school_class_id, 
                          options_for_select, 
                          { include_blank: 'Select a class' }, 
                          { 
                            class: "mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm",
                            data: { controller: "class-selection" }
                          } %>
            </div>
            <div id="class-details" class="mt-4 bg-gray-50 rounded-lg p-4 hidden" data-class-selection-target="details">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center">
                  <span class="text-indigo-700 font-medium" data-class-selection-target="initial"></span>
                </div>
                <div class="ml-4">
                  <h4 class="text-sm font-medium text-gray-900" data-class-selection-target="name"></h4>
                  <p class="text-xs text-gray-500">
                    Academic Year: <span data-class-selection-target="year"></span>, 
                    Semester: <span data-class-selection-target="semester"></span>
                  </p>
                  <p class="text-xs text-gray-500 mt-1">
                    Teacher: <span data-class-selection-target="teacher"></span>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-end gap-4">
      <%= link_to "Cancel", students_path, data: { turbo: false }, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150" %>
      <%= f.button type: "submit", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        Create Student
      <% end %>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    class ClassSelectionController {
      static targets = ['details', 'initial', 'name', 'year', 'semester', 'teacher']
      
      connect() {
        const select = this.element
        select.addEventListener('change', this.updateDetails.bind(this))
        
        // Initialize if a value is already selected
        if (select.value) {
          this.updateDetails({ target: select })
        }
      }
      
      updateDetails(event) {
        const select = event.target
        const selectedOption = select.options[select.selectedIndex]
        
        if (selectedOption && selectedOption.value) {
          const className = selectedOption.text.split(' (')[0]
          const teacher = selectedOption.dataset.teacher
          const year = selectedOption.dataset.year
          const semester = selectedOption.dataset.semester
          
          this.initialTarget.textContent = className ? className[0] : ''
          this.nameTarget.textContent = className
          this.yearTarget.textContent = year
          this.semesterTarget.textContent = semester
          this.teacherTarget.textContent = teacher
          
          this.detailsTarget.classList.remove('hidden')
        } else {
          this.detailsTarget.classList.add('hidden')
        }
      }
    }
    
    // Register the controller
    if (typeof Stimulus !== 'undefined') {
      const application = Stimulus.application || new Stimulus.Application()
      application.register('class-selection', ClassSelectionController)
    }
  })
</script> 