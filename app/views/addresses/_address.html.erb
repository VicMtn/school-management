<div id="<%= dom_id address %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Zip:</strong>
    <%= address.zip %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Town:</strong>
    <%= address.town %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Street:</strong>
    <%= address.street %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Number:</strong>
    <%= address.number %>
  </div>
</div>
