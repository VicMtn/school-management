<% content_for :title, "Edit Profile" %>

<div class="min-h-[calc(100vh-12rem)] flex flex-col justify-center">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow-lg rounded-lg sm:px-10 border border-gray-200">
      <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, autocomplete: "email", class: "appearance-none block w-full px-3 py-2 border border-gray-200 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 sm:text-sm transition-colors duration-200" %>
          </div>
        </div>

        <div>
          <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Leave blank if you don't want to change it", class: "appearance-none block w-full px-3 py-2 border border-gray-200 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 sm:text-sm transition-colors duration-200" %>
            <% if @minimum_password_length %>
              <p class="mt-2 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full px-3 py-2 border border-gray-200 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 sm:text-sm transition-colors duration-200" %>
          </div>
        </div>

        <div>
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "We need your current password to confirm your changes", class: "appearance-none block w-full px-3 py-2 border border-gray-200 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-300 sm:text-sm transition-colors duration-200" %>
          </div>
        </div>

        <div>
          <%= f.submit "Update", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-gray-700 bg-blue-200 hover:bg-blue-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-300 transition-colors duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 border-t border-gray-200 pt-6">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-600">Unhappy?</p>
          <%= button_to "Delete my account", user_registration_path, method: :delete, data: { confirm: "Are you sure?" }, class: "text-sm font-medium text-red-600 hover:text-red-500" %>
        </div>
      </div>
    </div>
  </div>
</div> 